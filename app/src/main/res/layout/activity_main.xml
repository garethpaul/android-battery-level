<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ecf0f1" tools:context=".MainActivity"
    android:id="@+id/main">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="54dp"
        android:id="@+id/charge"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="State:"
        android:id="@+id/textView2"
        android:layout_marginTop="46dp"
        android:layout_alignEnd="@+id/charge"
        android:layout_marginRight="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Plugged"
        android:id="@+id/textView3"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Discharging"
        android:id="@+id/state"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView3"
        android:paddingLeft="20dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="On Battery"
        android:id="@+id/plugged"
        android:paddingLeft="20dip"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/level" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Level"
        android:id="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/battery"
        android:layout_toStartOf="@+id/state" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100%"
        android:id="@+id/level"
        android:paddingLeft="20dip"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/tech" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Technology"
        android:id="@+id/textView7"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Li-ion"
        android:id="@+id/tech"
        android:paddingLeft="20dip"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temperature"
        android:id="@+id/textView9"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20"
        android:id="@+id/temperature"
        android:layout_marginLeft="0dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/health" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Voltage"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView9"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="400v"
        android:id="@+id/voltage"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignStart="@+id/temperature" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView11"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginTop="20dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100V"
        android:id="@+id/current"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignStart="@+id/voltage" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView2" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:background="#FDFDFD"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:id="@+id/battery"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:cropToPadding="true"
        android:src="@drawable/battery_red" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Model"
        android:id="@+id/textView"
        android:layout_below="@+id/textView13"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nexus 1"
        android:id="@+id/model"
        android:layout_marginLeft="0dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/current" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Health"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView11"
        android:layout_marginTop="20dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Good"
        android:id="@+id/health"
        android:layout_marginLeft="20dip"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignEnd="@+id/tech" />


</RelativeLayout>
